{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["dist/**/*"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "indent": "off",
        "quotes": "off",
        "semi": "off"
      }
    }
  ]
}
